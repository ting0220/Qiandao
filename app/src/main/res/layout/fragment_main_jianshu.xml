<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_day">

    <include
        android:id="@+id/bottom_main_jianshu"
        layout="@layout/bottom_main_jianshu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_above="@id/bottom_main_jianshu"/>

    <RelativeLayout
        android:id="@+id/activity_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_line"
        android:background="@color/white_day"
        android:tag="skin:white:background"/>

</RelativeLayout>